.detail {
  width: 694rpx;
  height: 300rpx;
  margin: 26rpx auto 0;
  position: relative;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
}
.detail .info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff;
}
.detail .info>view:nth-child(1) {
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 100rpx 0 18rpx 50rpx;
}
.detail .info>view:nth-child(2) {
  font-size: 50rpx;
  display: flex;
  justify-content: space-between;
  line-height: 70rpx;
  margin-left: 50rpx;
}
.detail .info>view:nth-child(2)>.btn {
  width: 164rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #5B91FE;
  font-size: 28rpx;
  border-radius: 30rpx;
  background: #fff;
  margin-right: 44rpx;
}

.btn-box {
  display: flex;
  background: #fff;
  color: #5B91FE;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.btn-box>view {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 64rpx;
  justify-content: center;
}
.btn-box>view:first-child {
  border-right: 1px solid #5B91FE;
}
.btn-box>view image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.title {
  display: flex;
  flex-direction: row;
  margin: 54rpx 0 48rpx 20rpx;
  font-size: 26rpx;
  color: #555555;
}
.title .line {
  width: 4rpx;
  background: #5B91FE;
  margin-right: 6rpx;
}

.count-box {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}
.count-box .item {
  width: 162rpx;
  height: 100rpx;
  position: relative;
}
.count-box .item-info {
  position: absolute;
  top: 0;
  left: 0;
  width: 162rpx;
  height: 100rpx;
  border: 1px solid #FE805B;
  box-sizing: border-box;
  border-radius: 10rpx;
  color: #FE805B;
  text-align: center;
}
.count-box .item-info>view:nth-child(1) {
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 16rpx;
}
.count-box .item-info>view:nth-child(2) {
  font-size: 18rpx;
  line-height: 26rpx;
}
.count-box .item:last-child .item-info>view {
  margin-top: 34rpx;
  line-height: 1;
}
.count-box .item.active>view {
  color: #fff;
}

.text-box {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 0 20rpx;
}

.save-btn {
  padding: 80rpx 0;
  margin-top: 44rpx;
}
.save-btn>view {
  font-size: 32rpx;
  color: #fff;
  background: #5B91FE;
  width: 620rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 60rpx;
  margin: 0 auto;
}

.log-box {
  margin-top: 20rpx;
  padding: 0 24rpx;
  background: #fff;
}
.log-box .log-item {
  display: flex;
  height: 116rpx;
  align-items: center;
  border-bottom: 1px solid #E7E7E7;
}
.log-box .log-item>view:nth-child(1) {
  width: 52rpx;
  height: 52rpx;
  margin-right: 8rpx;
}
.log-box .log-item>view:nth-child(2) {
  flex: 1;
}
.log-box .log-item .right>view {
  display: flex;
  justify-content: space-between;
}
.log-box .log-item .right .top {
  font-size: 26rpx;
  color: #555555;
  margin-bottom: 8rpx;
}
.log-box .log-item .right .top>view:last-child {
  font-size: 20rpx;
  color: #999999;
}
.log-box .log-item .right .bottom {
  font-size: 22rpx;
  color: #555555;
}
.log-box .log-item .right .bottom>view:last-child {
  font-size: 26rpx;
}