.container {
  background: #fff;
}
.banner {
  height: 520rpx;
}
.container>view {
  text-align: center;
}
.tilte {
  color: #333333;
  font-size: 42rpx;
  font-weight: bold;
  margin: 96rpx 0 6rpx 0;
}
.line {
  height: 2rpx;
  background: #5B91FE;
  width: 52rpx;
  margin: 24rpx auto;
}
.msg {
  color: #333333;
  font-size: 22rpx;
}
.wx-box {
  width: 374rpx;
  margin: 0 auto;
  margin-top: 64rpx;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  border-radius: 4rpx;
  justify-content: center;
  align-items: center;
  color: #333333;
  font-size: 22rpx;
  box-shadow: 0px 0px 4px 0px rgba(139, 136, 136, 0.3);
  background: #fff;
}
.wx-box::after {
  border: none;
}
.wx-box image {
  width: 88rpx;
  height: 88rpx;
  margin-right: 28rpx;
}
.bottom {
  margin-top: 90rpx;
  font-size: 30rpx;
  color: #333333;
}
.bottom .line {
  display: inline-block;
  width: 78rpx;
  height: 1px;
  background: #9F9F9F;
  margin: 0 10rpx;
  margin-bottom: 8rpx;
}
.text {
  margin-top: 16rpx;
  color: #999999;
  font-size: 22rpx;
  line-height: 1;
}