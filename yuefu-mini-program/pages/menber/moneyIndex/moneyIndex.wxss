.box {
  height: 300rpx;
  position: relative;
}
.info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  color: #fff;
}
.info>view {
  line-height: 1;
  text-align: center;
}
.info>view:nth-child(1) {
  margin-top: 44rpx;
  font-size: 28rpx;
}
.info>view:nth-child(2) {
  margin: 30rpx;
  font-size: 64rpx;
}
.info>navigator {
  font-size: 30rpx;
  width: 124rpx;
  border: 1px solid #fff;
  margin: 0 auto;
  text-align: center;
  border-radius: 30rpx;
  line-height: 48rpx;
  height: 48rpx;
}