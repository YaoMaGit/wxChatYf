.box {
  height: calc(100vh - 90rpx);
  overflow-y: auto;
}
.date {
  text-align: center;
  color: #888787;
  font-size: 24rpx;
  margin: 44rpx 0;
}
.left {
  width: 642rpx;
  margin-left: 26rpx;
  position: relative;
}
.left .left-info {
  position: absolute;
  width: 556rpx;
  top: 20rpx;
  left: 56rpx;
}
.left .top {
  color: #333333;
  font-size: 28rpx;
  border-bottom: 1px solid #D2D2D2;
  line-height: 44rpx;
  padding-bottom: 16rpx;
}
.left .tips-box>view {
  color: #333333;
  font-size: 28rpx;
  line-height: 1;
  margin-top: 24rpx;
}
.left .tips-box .tips {
  color: #5991FE;
  margin-top: 16rpx;
}
.left .triangle {
  height: 342rpx;
}

.right {
  display: flex;
  justify-content: flex-end;
}
.right>view {
  position: relative;
  width: 382rpx;
  background: #5991FE;
  margin-right: 52rpx;
  margin-top: 36rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 10rpx 48rpx;
  line-height: 44rpx;
  border-radius: 10rpx;
}

.input-box {
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 26rpx;
}
.input-box .left-icon {
  width: 36rpx;
  height: 52rpx;
  margin-right: 8rpx;
}
.input-box .right-icon {
  width: 70rpx;
  height: 70rpx;
  margin-left: 14rpx;
}
.input-box view {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  background: #fff;
  border-radius: 34rpx;
  border: 1px solid #E5E5E5;
  box-sizing: border-box;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
}
.input-box view input {
  display: inline-block;
  flex: 1;
  width: 500rpx;
}
.input-box view image {
  width: 42rpx;
  height: 42rpx;
}
.right .triangle {
  position: absolute;
  top: 16rpx;
  left: 100%;
  width: 28rpx;
  height: 56rpx;
  margin-left: -1px;
}