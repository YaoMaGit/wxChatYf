.search-box {
  display: flex;
  height: 110rpx;
  background: #161d3a;
  align-items: center;
  padding: 0 20rpx;
}

.search-box .addr {
  flex: 1;
  width: 172rpx;
  display: flex;
  color: #fdfdfd;
  font-size: 30rpx;
  align-items: center;
  padding-left: 15rpx;
}

.search-box .addr image {
  width: 22rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.search-box .input-box {
  flex: 7;
  display: flex;
  align-items: center;
  height: 62rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 22rpx;
  padding: 0 30rpx;
}

.search-box .input-box image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.search-box .input-box input {
  flex: 1;
}



/* list */
.add_img{
	width: 40rpx;
	height: 40rpx;
	display: block;
	float: right;
	border: 1px solid #5B91FE;
	border-radius: 50%;
}
.goods_item {
	display: flex;
	font-size: 22rpx;
	color: #999999;
	justify-content: space-around;
	margin: 20rpx ;
	background: #FFFFFF;
	border-radius: 10rpx;
	padding: 15rpx;
}

.goods_left {
	flex: 1;
}

.goods_rigth {
	flex: 3;
	display: flex;
	flex-direction: column;

}

.goods_left>view {
	width: 144rpx;
	height: 144rpx;
	margin: 15rpx;
}

.goods_left image {
	width: 100%;
	height: 100%;
}

.goods_right {
	padding-bottom: 15rpx;
}

.goods_right>view {
	padding-bottom: 7rpx;
}

.title_div {
	color: #444444;
	font-size: 30rpx;
	font-weight: 700;
}

.price_div1 {
	color: #FF1C00;
	font-size: 30rpx;
	padding-right: 10rpx;
}

.price_div2 {
	color: #C9C9C9;
	font-size: 26rpx;
	text-decoration: line-through;
}