/* pages/cart/comment/comment.wxss */

.title_div {
	height: 90rpx;
	line-height: 90rpx;
	border-bottom: 1rpx solid rgb(216, 214, 214);
	color: #444;
	font-weight: 400;
	font-size: 32rpx;
	background: #fff;
}
.com_box{
	display: flex;
	background: #fff;
	padding-top: 30rpx;
	padding-bottom: 15rpx;
}
.title_div image {
	width: 44rpx;
	height: 42rpx;
	vertical-align: middle;
	margin: 0px 10rpx;
	margin-left: 30rpx;
}
.left_div{
	flex: 1;
	text-align: center;
}
.left_div image {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}
.right_div{
	flex: 4;
}
.right_div>view{
	padding-bottom: 10rpx;
}
.name{
	font-size:32rpx;
	color:rgba(68,68,68,1);
}
.time{
	font-size:24rpx;
	color:#999999;
}
.content{
	font-size:28rpx;
	color:#444444;
}

.btn_box{
	display: flex;
}
.btn_div1,.btn_div2,.btn_div3,.btn_div4{
	flex: 1;
	
}
.btn_div_image{
	width:26rpx;
	height:26rpx;
	vertical-align: middle;
	margin-right: 5rpx;
}
.btn_div_text{
		width:120rpx ;
		height: 40rpx;
    line-height: 40rpx;
		text-align: center;
		border-radius: 50rpx;
		border:1rpx solid rgba(153,153,153,1);
		display: inline-block;
		color: #999999;
		font-size:24rpx;
}

.cmbtn{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	border-top: 1rpx solid  rgb(216, 214, 214);
	color: #444;
	font-weight: 400;
	font-size: 32rpx;
	background: #fff;
	position: fixed;
	bottom: 0px;
	text-align: center;
	}
	
	.cmbtn image {
		width: 44rpx;
		height: 42rpx;
		vertical-align: middle;
		margin: 0px 10rpx;
	}

.comment-success {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.4);
  z-index: 10;
}
.comment-success .info {
  position: absolute;
  top: 300rpx;
  left: 154rpx;
  width: 436rpx;
  height: 274rpx;
  background: #fff;
  border-radius: 6rpx;
}
.comment-success .info>image {
  width: 72rpx;
  height: 72rpx;
  display: block;
  margin: 60rpx auto 30rpx;
}
.comment-success .info .text {
  color: #444444;
  font-size: 28rpx;
  text-align: center;
  line-height: 1;
}
.comment-success .info .close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  color: #6497FF;
  font-size: 24rpx;
}