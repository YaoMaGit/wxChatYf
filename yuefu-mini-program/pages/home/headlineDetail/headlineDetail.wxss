.detail-box {
  background: #fff;
  padding: 20rpx;
}
.detail-box .top {
  text-align: right;
}
.detail-box .top image {
  width: 44rpx;
  height: 44rpx;
}
.detail-box .pic {
  height: 382rpx;
}
.detail-box .title {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.detail-box .title image {
  width: 46rpx;
  height: 46rpx;
}
.detail-box .title .text>view:nth-child(1) {
  color: #444444;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-left: 12rpx;
}
.detail-box .title .text>view:nth-child(2) {
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
}
.detail-box .content .name {
  color: #444444;
  font-size: 32rpx;
  line-height: 46rpx;
  margin: 34rpx 0;
}
.detail-box .content .count {
  font-size: 24rpx;
  color: #999999;
}
.detail-box .content .list {
  margin-top: 62rpx;
  color: #999999;
  line-height: 34rpx;
  font-size: 24rpx;
  padding-left: 38rpx;
  border-left: 1px solid #999999;
  margin-bottom: 52rpx;
}
.detail-box .content .center-title {
  text-align: center;
  color: #444444;
  font-size: 28rpx;
  line-height: 40rpx;
}
.detail-box .content .center-title>view:nth-child(2) {
  margin: 26rpx 0;
}
.detail-box .content image {
  height: 382rpx;
}
.text-box {
  padding: 26rpx 0;
  font-size: 28rpx;
  color: #444444;
  line-height: 48rpx;
}
.text-box>view {
  margin-bottom: 18rpx;
}

.xihuan-box {
}
.xihuan-box .top {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
  text-align: center;
}
.xihuan-box .top .line {
  display: inline-block;
  width: 80rpx;
  height: 1px;
  background: #9F9F9F;
  margin: 0 12rpx;
  margin-bottom: 8rpx;
}
.xihuan-box .top .left {
  color: #666666;
}
.xihuan-box .top .right {
  color: #FF5151;
}
.xihuan-box .list {
  background: #fff;
}
.xihuan-box .list .item {
  padding: 24rpx 20rpx 0 20rpx;
  display: flex;
}
.xihuan-box .list .item .left {
  width: 144rpx;
}
.xihuan-box .list .item .left image {
  height: 144rpx;
}
.xihuan-box .list .item .right {
  flex: 1;
  font-size: 22rpx;
  color: #999999;  
  border-bottom: 1px solid #EEEEEE;
  padding-right: 26rpx;
  position: relative;
  padding-left: 26rpx;
}
.xihuan-box .list .item .right>view {
  line-height: 1;
  margin-bottom: 20rpx;
}
.xihuan-box .list .item .right .title {
  color: #444444;
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 24rpx;
}
.xihuan-box .list .item .right .info {
  line-height: 30rpx;
}
.xihuan-box .list .item .right .price text:nth-child(1) {
  color: #FF5151;
  font-size: 24rpx;
}
.xihuan-box .list .item .right .price text:nth-child(2) {
  margin-left: 20rpx;
  text-decoration: line-through;
}
.xihuan-box .list .item .right .count {
  margin-bottom: 28rpx;
}
.xihuan-box .list .item .right .icon-dowm {
  position: absolute;
  height: 20rpx;
  width: 16rpx;
  right: 0;
  top: 50%;
  margin-top: -7rpx;
  transform: rotate(90deg);
}

.bottom-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bottom-box .left {
  display: flex;
  flex-direction: row;
  margin-left: 26rpx;
}
.bottom-box .left>view image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}
.bottom-box .left .zan image {
  width: 102rpx;
}
.bottom-box .right {
  width: 226rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #5B91FE;
  color: #fff;
  border-radius: 40rpx;
  margin-right: 26rpx;
  font-size: 32rpx;
}
.bottom-box .right image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 14rpx;
}