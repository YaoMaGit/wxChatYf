.a-z {
  width: 35rpx;
  position: fixed;
  top: 112rpx;
  text-align: center;
  right: 5rpx;
  color: #6B9BFC;
  font-size: 28rpx;
}


.city-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 25rpx;
  background-color: #fff;
}

.city-item {
  background: #fff;
  /* margin-top: 5rpx; */
  width: 93%;
  padding-left: 10rpx;
  margin-left:10rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgb(247, 244, 244);
  /* border:1rpx solid red; */
}

.city-item-A-Z {
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  padding-left:20rpx;
  background-color: #f4f4f4;
  border-top: 1rpx solid rgb(235, 233, 233);
  margin-top: -1rpx;
}
.search-box {
  display: flex;
  height: 110rpx;
  background: #161d3a;
  align-items: center;
  padding: 0 20rpx;
  position: fixed;
  top: 0px;
  width: 100%;
}

.search-box .addr {
  flex: 1;
  width: 172rpx;
  display: flex;
  color: #fdfdfd;
  font-size: 30rpx;
  align-items: center;
  padding-left: 15rpx;
}

.search-box .addr image {
  width: 22rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.search-box .input-box {
  flex: 7;
  display: flex;
  align-items: center;
  height: 62rpx;
  background: #fff;
  border-radius: 30rpx;
  font-size: 22rpx;
  padding: 0 30rpx;
}

.search-box .input-box image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
}

.search-box .input-box input {
  flex: 1;
}

.cityName {
  font-size: 28rpx;
  color: #444;
}

.ccc{
  color: red;
}

.hot{
  margin-top: 135rpx;
}
.hottitle{
color: #333333;
font-size: 30rpx;
padding-left: 15rpx;
font-weight: 600;

}
.item_box{
  display: flex;
  justify-content: space-around;
  flex-flow: wrap;
  padding: 0 30rpx;
}
