.box{
	background: #FFFFFF;
	display: flex;
	padding: 25rpx 0px 0px 0px ;
}
.box>view{
	flex: 1;
	text-align: center;
	font-size: 28rpx;
	color: #333333;
}
.tab{
	display: inline-block;
	padding-bottom: 15rpx;
}
.active{
	border-bottom: 4rpx solid #6B9BFC;
}

/* list */
.add_img{
	width: 40rpx;
	height: 40rpx;
	display: block;
	float: right;
	border: 1px solid #5B91FE;
	border-radius: 50%;
}
.goods_item {
	display: flex;
	font-size: 22rpx;
	color: #999999;
	justify-content: space-around;
	margin: 20rpx ;
	background: #FFFFFF;
	border-radius: 10rpx;
	padding: 15rpx;
}

.goods_left {
	flex: 1;
}

.goods_rigth {
	flex: 3;
	display: flex;
	flex-direction: column;

}

.goods_left>view {
	width: 144rpx;
	height: 144rpx;
	margin: 15rpx;
}

.goods_left image {
	width: 100%;
	height: 100%;
}

.goods_right {
	padding-bottom: 15rpx;
}

.goods_right>view {
	padding-bottom: 7rpx;
}

.title_div {
	color: #444444;
	font-size: 30rpx;
	font-weight: 700;
}

.price_div1 {
	color: #FF1C00;
	font-size: 30rpx;
	padding-right: 10rpx;
}

.price_div2 {
	color: #C9C9C9;
	font-size: 26rpx;
	text-decoration: line-through;
}