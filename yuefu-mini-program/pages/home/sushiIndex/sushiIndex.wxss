.banner-box {
  height: 300rpx;
}

.pic-box {
  background: #fff;
}
.pic-box .title {
  height: 96rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  justify-content: space-between;
  color: #383838;
  font-size: 28rpx;
}
.pic-box .title .right {
  color: #999999;
  font-size: 22rpx;
}
.pic-box .title .right image {
  width: 16rpx;
  height: 18rpx;
}
.pic-box .pic-list {

}
.pic-box .pic-list swiper-item,
.pic-box .pic-list image {
  width: 250rpx;
  text-align: center;
}
.pic-box .pic-list image {
  width: 230rpx;
}
.pic-box .pic-list image {
  height: 182rpx;
}
.pic-box .pic-list .info {
  font-size: 24rpx;
  color: #898989;
  text-align: left;
  padding-left: 14rpx;
  padding-top: 22rpx;
}
.pic-box .pic-list .info>view {
  line-height: 1;
}
.pic-box .pic-list .info .price {
  color: #FF5151;
  margin-top: 12rpx;
}
.pic-box .pic-list .info .price>text {
  color: #999999;
  font-size: 20rpx;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.xihuan-box .top {
  height: 72rpx;
  line-height: 72rpx;
  font-size: 26rpx;
  text-align: center;
}
.xihuan-box .top .line {
  display: inline-block;
  width: 80rpx;
  height: 1px;
  background: #9F9F9F;
  margin: 0 12rpx;
  margin-bottom: 8rpx;
}
.xihuan-box .top .left {
  color: #666666;
}
.xihuan-box .top .right {
  color: #FF5151;
}
.xihuan-box .list {
  background: #fff;
}
.xihuan-box .list .item {
  padding: 24rpx 20rpx 0 20rpx;
  display: flex;
}
.xihuan-box .list .item .left {
  width: 144rpx;
}
.xihuan-box .list .item .left image {
  height: 144rpx;
}
.xihuan-box .list .item .right {
  flex: 1;
  font-size: 22rpx;
  color: #999999;  
  border-bottom: 1px solid #EEEEEE;
  padding-right: 26rpx;
  position: relative;
  padding-left: 26rpx;
}
.xihuan-box .list .item .right>view {
  line-height: 1;
  margin-bottom: 20rpx;
}
.xihuan-box .list .item .right .title {
  color: #444444;
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 24rpx;
}
.xihuan-box .list .item .right .info {
  line-height: 30rpx;
}
.xihuan-box .list .item .right .price text:nth-child(1) {
  color: #FF5151;
  font-size: 24rpx;
}
.xihuan-box .list .item .right .price text:nth-child(2) {
  margin-left: 20rpx;
  text-decoration: line-through;
}
.xihuan-box .list .item .right .count {
  margin-bottom: 28rpx;
}
.xihuan-box .list .item .right .icon-dowm {
  position: absolute;
  height: 20rpx;
  width: 16rpx;
  right: 0;
  top: 50%;
  margin-top: -7rpx;
  transform: rotate(90deg);
}